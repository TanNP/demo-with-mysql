<h1>Listing products</h1>
<%#= link_to  "Pre", products_path(:page => @prev_page) %> 
<%#= link_to "Next", products_path(:page => @next_page) %>
<%= link_to 'New Product', new_product_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Img</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description.html_safe %></td>
        <td><%= product.img %></td>
        <td><%= product.price %></td>
        <% if can? :show, product %>
          <td><%= link_to 'Show', product %></td>
        <% end %>
        <% if can? :edit, product %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <% end %>
        <% if can? :destroy, product %>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>


