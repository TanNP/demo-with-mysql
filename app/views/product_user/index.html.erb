<h1>Listing products</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Img</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_user_show_path(product.id) %></td>
        <td><%= product.description.html_safe %></td>
        <td><%= product.img %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products %>